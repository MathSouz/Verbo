<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextEdit">
        <item name="android:background">@drawable/stroke_background</item>
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>

    <style name="ButtonStroke">
        <item name="android:background">@drawable/stroke_background</item>
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>

    <style name="ButtonFilled" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/filled_background</item>
    </style>

    <style name="ButtonText" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

</resources>